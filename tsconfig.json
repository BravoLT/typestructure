{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "target": "ES5",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "./bin",
    "noEmitHelpers": false,
    "baseUrl": "./",
    "paths": {
      "library/*": ["src/library/*"],
      "features/*": ["src/features/*"],
      "ioc/*": ["src/_ioc/*"],
      "data/*": ["src/_lib/data/*"]
    }
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
